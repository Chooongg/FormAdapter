<resources>
    <!-- Base application theme. -->
    <style name="Theme.FormAdapter2" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="MenuTest" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="actionButtonStyle">@style/ButtonTest</item>
    </style>

    <style name="ButtonTest">
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:minWidth">16dp</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">center</item>
        <item name="android:maxLines">2</item>
    </style>
</resources>